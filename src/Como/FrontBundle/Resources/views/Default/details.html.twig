{% extends 'ComoAccommodationBundle::layout.html.twig' %}

{% block body %}
  <hr>      
      
      <div class="row-fluid marketing">
        <div class="span9">
            <div class="row-fluid">
                <div class="span4">
                    <div><img src="{{ obj.Productimages[0].ServerPath }}" /></div>
                </div>
                {% set route = app.request.get('_route') %}
                {% set route_params = app.request.get('_route_params') %}                    
                <div class="span4">
                    <h4>{{ obj.ProductName }}</h4>
                    <p>{{ obj.ProductDescription  }}</p>
                    
                </div>
                <div class="span4">
                    <h4>Per Room / night from</h4>
                    <p>{{ obj.RateFrom }}</p>
                </div>
             </div>
        
        </div>

        <div class="span3">
          <iframe width="150" height="150" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q={{ obj.GeocodeGdaLatitude }},{{ obj.GeocodeGdaLongitude }}&amp;aq=&amp;z=14&amp;output=embed">
            </iframe>
        </div>
      </div>
      
      <hr>
{% endblock body%}