{% extends 'ComoTneBundle::layout.html.twig' %}
 
{% block title %}
  Jobs in the {{ category.name }} category
{% endblock %}
 
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/comotne/css/jobs.css') }}" type="text/css" media="all" />
{% endblock %}
 
{% block content %}
  <div class="category">
    
    <h4>Category : {{ category.name }}</h4>
  </div>
 
  {% include 'ComoTneBundle:Job:list.html.twig' with {'jobs': category.activejobs} %}
 <div class="">
    
  {% if last_page > 1 %}
    <div class="pagination pull-right" style="margin: 0px;">
    <ul>
     <li>   
          <a href="{{ path('ComoTneBundle_category', { 'slug': category.slug, 'page': 1 }) }}">First
          </a>
      </li>
      <li>  
          <a href="{{ path('ComoTneBundle_category', { 'slug': category.slug, 'page': previous_page }) }}">Prev</a>
      </li>
 
      {% for page in 1..last_page %}
        {% if page == current_page %}
          <li>
             <a href=""> {{ page }}</a>
          </li>
        {% else %}
          <li>
            <a href="{{ path('ComoTneBundle_category', { 'slug': category.slug, 'page': page }) }}">{{ page }}</a>
          </li>
        {% endif %}
      {% endfor %}
      <li>
        <a href="{{ path('ComoTneBundle_category', { 'slug': category.slug, 'page': next_page }) }}">
        Next
        </a>
      </li>
      <li>
      <a href="{{ path('ComoTneBundle_category', { 'slug': category.slug, 'page': last_page }) }}">
        Last
        </a>
      </li>
    </ul>
    </div>
  {% endif %}
 
  <div class="pagination_desc">
    <strong>{{ total_jobs }}</strong> jobs in this category
 
    {% if last_page > 1 %}
      - page <strong>{{ current_page }}/{{ last_page }}</strong>
    {% endif %}
  </div>
</div>
{% endblock %}