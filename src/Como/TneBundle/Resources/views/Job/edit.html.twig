{% extends 'ComoTneBundle::layout.html.twig' %}
 
{% form_theme edit_form _self %}
 
{% block field_errors %}
{% spaceless %}
  {% if errors|length > 0 %}
    <ul>
      {% for error in errors %}
        <li>{{ error.messageTemplate|trans(error.messageParameters, 'validators') }}</li>
      {% endfor %}
    </ul>
  {% endif %}
{% endspaceless %}
{% endblock field_errors %}
 
{% block stylesheets %}
  {{ parent() }}
  <link rel="stylesheet" href="{{ asset('bundles/comotne/css/job.css') }}" type="text/css" media="all" />
{% endblock %}
 
{% block content %}
  <h1>Job edit</h1>
  <form action="{{ path('job_update', { 'token': entity.token }) }}" method="post" {{ form_enctype(edit_form) }}>
    
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.category) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.category) }}
            {{ form_widget(edit_form.category) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.type) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.type) }}
            {{ form_widget(edit_form.type) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.company) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.company) }}
            {{ form_widget(edit_form.company) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.file) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.file) }}
            {{ form_widget(edit_form.file) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.url) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.url) }}
            {{ form_widget(edit_form.url) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.position) }}</div>
          <div class="span8">
