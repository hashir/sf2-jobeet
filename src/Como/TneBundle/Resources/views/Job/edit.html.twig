            {{ form_widget(edit_form.position) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.location) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.location) }}
            {{ form_widget(edit_form.location) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.description) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.description) }}
            {{ form_widget(edit_form.description) }}
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.how_to_apply) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.how_to_apply) }}
            {{ form_widget(edit_form.how_to_apply) }}
          </div>
        </div>        
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.is_public) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.is_public) }}
            {{ form_widget(edit_form.is_public) }}
            <br /> Whether the job can also be published on affiliate websites or not.
          </div>
        </div>
        <div class="row-fluid" >
          <div class="span4">{{ form_label(edit_form.email) }}</div>
          <div class="span8">
            {{ form_errors(edit_form.email) }}
            {{ form_widget(edit_form.email) }}
          </div>
        </div>      
 
    {{ form_rest(edit_form) }}
    <hr />
           
    <div class="row-fluid" >
          <div colspan="12">
            <input type="submit" value="Preview your job" />
          </div>
    </div >

  </form>
{% endblock %}